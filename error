pi = pigpio.pi()
if not pi.connected:
    print("‚ùå pigpio not connected")
    exit()

# --- VERY IMPORTANT: setup servo pins ---
pi.set_mode(PAN_PIN, pigpio.OUTPUT)
pi.set_mode(TILT_PIN, pigpio.OUTPUT)

# initialize pulsewidth so pigpio "claims" the pins for servo use
pi.set_servo_pulsewidth(PAN_PIN, 0)
pi.set_servo_pulsewidth(TILT_PIN, 0)
